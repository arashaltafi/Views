<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.progressbar4.ProgressBarKotlinActivity4">

    <!--        @style/SpinKitView                          -->
    <!--        @style/SpinKitView.Circle                   -->
    <!--        @style/SpinKitView.Large                    -->
    <!--        @style/SpinKitView.Small                    -->
    <!--        @style/SpinKitView.Small.DoubleBounce       -->

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_1"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/black" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/spin_kit_2"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/colorAccent" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_3"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/red" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/yellow" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/spin_kit_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/grey" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/green" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/black" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/spin_kit_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/purple_700" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:SpinKit_Color="@color/teal_200" />

    </LinearLayout>



</LinearLayout>