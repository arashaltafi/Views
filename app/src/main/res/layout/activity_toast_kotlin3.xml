<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.toast3.ToastKotlinActivity3">

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:text="Sample 1"
        android:id="@+id/btn_sample_1_toast3"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Sample 2"
        android:id="@+id/btn_sample_2_toast3"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Sample 3"
        android:id="@+id/btn_sample_3_toast3"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Sample 4"
        android:id="@+id/btn_sample_4_toast3"
        android:layout_height="wrap_content"/>

</LinearLayout>