<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.toast2.ToastKotlinActivity2">

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:text="Motion Toast"
        android:id="@+id/btn_motion_toast2"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Color Motion Toast"
        android:id="@+id/btn_color_motion_toast2"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Dark Toast"
        android:id="@+id/btn_dark_toast2"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Dark Color Toast"
        android:id="@+id/btn_dark_color_toast2"
        android:layout_height="wrap_content"/>

</LinearLayout>