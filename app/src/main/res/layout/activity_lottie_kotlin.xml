<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    tools:context=".kotlin.lottie.LottieKotlinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="10dp"
            android:id="@+id/lottie_view_1"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/loading"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="20dp"
            android:id="@+id/lottie_view_2"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/oading"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="20dp"
            android:id="@+id/lottie_view_3"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/lloading"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view_4"
            android:layout_marginTop="20dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/emptybox"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="20dp"
            android:id="@+id/lottie_view_5"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/emptycart"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="20dp"
            android:id="@+id/lottie_view_6"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/emptyfav"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>