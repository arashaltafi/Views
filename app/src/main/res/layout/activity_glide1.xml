<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".kotlin.glide.Glide1Activity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivGlideServer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/person0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivGlideDrawable"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        tools:src="@drawable/person1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivGlideBitmap"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        tools:src="@drawable/person2" />

</androidx.appcompat.widget.LinearLayoutCompat>