<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:backgroundTint="@color/grey_default"
    tools:context=".kotlin.image7.ImageKotlinActivity7">

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/ivLike1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sparkbutton_activeImage="@drawable/ic_heart_selected"
        app:sparkbutton_iconSize="20dp"
        app:sparkbutton_inActiveImage="@drawable/ic_heart_not_selected"
        app:sparkbutton_primaryColor="@color/colorRed"
        app:sparkbutton_secondaryColor="@color/colorRed" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/ivLike2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivLike1"
        app:sparkbutton_activeImage="@drawable/ic_heart_selected"
        app:sparkbutton_iconSize="20dp"
        app:sparkbutton_inActiveImage="@drawable/ic_heart_not_selected"
        app:sparkbutton_primaryColor="@color/colorBlue"
        app:sparkbutton_secondaryColor="@color/colorBlue" />

</androidx.constraintlayout.widget.ConstraintLayout>